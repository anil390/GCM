<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#33B5E5"
    android:orientation="vertical" >
      
          <TextView
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"
         android:layout_marginLeft="10dip"
         android:layout_marginTop="10dip"
         android:text="@string/meeting_subject"
         android:textColor="@color/Red" />
					
					    <EditText
					        android:id="@+id/subjectEt"
							android:layout_width="fill_parent"
				      	   android:layout_marginLeft="10dip"
				      	   android:layout_marginRight="10dip"
				      	   android:layout_height="wrap_content"
				       	  android:textColor="#000000"
				        	 android:inputType="phone"
				       	 android:shadowColor="@color/Red"
				       	 android:background="@drawable/rect_text_edit"
						 android:hint="@string/meeting_subject"
					        >
					
					        <requestFocus />
					    </EditText>

        
        
					    <TextView
					        android:id="@+id/welcome"
					        android:layout_width="fill_parent"
					         android:layout_height="wrap_content"
					         android:layout_marginLeft="10dip"
					         android:layout_marginTop="10dip"
					        android:text="@string/meeting_location" 
					        android:textColor="@color/Red"/>
					
					    <EditText
					        android:id="@+id/meetingLocationET"
					       android:layout_width="fill_parent"
				         android:layout_marginLeft="10dip"
				         android:layout_marginRight="10dip"
				         android:layout_height="wrap_content"
				         android:textColor="#000000"
				         android:inputType="phone"
				        android:shadowColor="@color/Red"
				        android:background="@drawable/rect_text_edit"
					        android:hint="@string/meeting_location"
					        >
					
					    </EditText>

        
        
					    <TextView
					        android:id="@+id/textView3"
					        android:layout_width="fill_parent"
					         android:layout_height="wrap_content"
					         android:layout_marginLeft="10dip"
					         android:layout_marginTop="10dip"
					       
					        android:textColor="@color/Red"
					        android:text="@string/meeting_date" />
					
					    <Button
					        android:id="@+id/datePickerBT"
					       android:layout_width="fill_parent"
				         android:layout_marginLeft="10dip"
				         android:layout_marginRight="10dip"
				         android:layout_height="wrap_content"
				         android:textColor="#000000"
				         android:inputType="phone"
				        android:shadowColor="@color/Red"
				        android:background="@drawable/rect_text_edit"
					        android:text="@string/meeting_date_hint"
					         />

					    <TextView
					        android:id="@+id/textView4"
					         android:layout_width="fill_parent"
					         android:layout_height="wrap_content"
					         android:layout_marginLeft="10dip"
					         android:layout_marginTop="10dip"
					       
					        android:textColor="@color/Red"
					        android:text="@string/meeting_time" />
					
					    <Button
					        android:id="@+id/timePickerBT"
					         android:layout_width="fill_parent"
				         android:layout_marginLeft="10dip"
				         android:layout_marginRight="10dip"
				         android:layout_height="wrap_content"
				         android:textColor="#000000"
				         android:inputType="phone"
				        android:shadowColor="@color/Red"
				        android:background="@drawable/rect_text_edit"
					        android:text="@string/meeting_time_hint"
					         />

        
        
					    <TextView
					        android:id="@+id/meetingInvitee"
					  
					         android:layout_width="fill_parent"
					         android:layout_height="wrap_content"
					         android:layout_marginLeft="10dip"
					         android:layout_marginTop="10dip"
					         
					       
					        android:textColor="@color/Red"
					        android:text="@string/meeting_invite" />
					    <!-- <Button  
    					   android:layout_weight=".4"
    					   android:layout_width="wrap_content"
    						android:layout_height="wrap_content"  
    				    android:id="@+id/contact_picker"  
      				  android:text="Select Hosts"  
       					 android:onClick="doLaunchContactPicker"></Button>  -->
					
					     <EditText
				        android:id="@+id/MeetingInviteET"
				           android:layout_width="fill_parent"
				         android:layout_marginLeft="10dip"
				         android:layout_marginRight="10dip"
				         android:layout_height="wrap_content"
				         android:textColor="#000000"
				         android:inputType="phone"
				         android:layout_marginBottom="20dip"
				        android:shadowColor="@color/Red"
				        android:background="@drawable/rect_text_edit"
				        android:hint="@string/meeting_invite_hint" >
				
				    </EditText>


            <Button
                android:id="@+id/meetingCreated"
                 android:background="@drawable/red_button"
        		 android:layout_width="wrap_content"
        		 android:layout_height="wrap_content"
        		 style= "@style/button_text"
        		 android:layout_marginTop="30dip"
        		 android:layout_gravity="center_horizontal"
                android:text="Create Meeting" />



</LinearLayout>
